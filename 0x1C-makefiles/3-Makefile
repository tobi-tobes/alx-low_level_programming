CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all : $(NAME)
.PHONY : all

school : $(OBJ)
	$(CC) -o $(NAME) $(OBJ)
$(OBJ) : m.h

.PHONY : clean oclean fclean re
clean :
	$(RM) *~ $(NAME)
oclean :
	$(RM) $(OBJ)
fclean :
	$(RM) $(OBJ) *~ $(NAME)
re :
	$(RM) $(OBJ)
	$(CC) -c -o main.o main.c
	$(CC) -c -o school.o school.c
	$(CC) -o $(NAME) $(OBJ)
